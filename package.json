{
  "name": "eslint-plugin-swagger-tools",
  "version": "0.0.0-development",
  "description": "An extensible linter for Swagger/OpenAPI specifications.",
  "repository": {
    "type": "git",
    "url": "https://github.com/gregswindle/eslint-plugin-swagger-tools.git"
  },
  "bugs": "https://github.com/gregswindle/eslint-plugin-swagger-tools/issues",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "author": "Greg Swindle",
  "main": "lib/index.js",
  "scripts": {
    "coverage": "./node_modules/.bin/nyc report",
    "coverage:coveralls": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls",
    "git-issue-labels": "./node_modules/.bin/git-labelmaker",
    "security": "./node_modules/.bin/nsp check --output summary",
    "pretest": "./node_modules/.bin/eslint -c ./.eslintrc.js --ext .json,.js lib/** --fix",
    "test": "nyc mocha $(find tests -name '*.js')",
    "posttest": "./node_modules/.bin/nsp check --output summary",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "dependencies": {
    "eslint-json": "^2.0.0",
    "lodash": "^4.17.4",
    "pluralize": "^5.0.0",
    "requireindex": "~1.1.0",
    "yamljs": "^0.2.10"
  },
  "devDependencies": {
    "commitplease": "^2.7.10",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-json": "^2.0.0",
    "git-labelmaker": "^0.9.0",
    "jsdoc": "^3.4.3",
    "mocha": "^3.1.2",
    "nsp": "^2.6.3",
    "nyc": "^10.3.2",
    "semantic-release-cli": "^3.0.3",
    "semantic-release": "^6.3.6"
  },
  "peerDependencies": {
    "eslint": "^3.19.0"
  },
  "engines": {
    "node": ">=6.x"
  },
  "license": "Apache-2.0",
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "tests/**/*.js",
      "**/*.spec.js",
      "**/fixtures/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "check-coverage": true,
    "lines": 100
  }
}
